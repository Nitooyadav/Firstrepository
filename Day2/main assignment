"""


def deposit(balance, amount):
    if amount <= 0:
        return balance, "Deposit amount must be positive."
    balance += amount
    return balance, f"Deposit successful! New balance: {balance}"

def withdraw(balance, amount):
    if amount <= 0:
        return balance, "Withdrawal amount must be positive."
    if amount > balance:
        return balance, "Insufficient funds."
    balance -= amount
    return balance, f"Withdrawal successful! New balance: {balance}"

def check_balance(balance):
    return f"Current balance: {balance}"

balance = 1000 
while True:
    print("\nATM Menu:")
    print("1. Deposit")
    print("2. Withdraw")
    print("3. Check Balance")
    print("4. Exit")
    choice = input("Enter your choice (1-4): ")

    if choice == '1':
        try:
            amount = float(input("Enter amount to deposit: "))
            balance, msg = deposit(balance, amount)
            print(msg)
        except ValueError:
            print("Please enter a valid number.")
    elif choice == '2':
        try:
            amount = float(input("Enter amount to withdraw: "))
            balance, msg = withdraw(balance, amount)
            print(msg)
        except ValueError:
            print("Please enter a valid number.")
    elif choice == '3':
        print(check_balance(balance))
    elif choice == '4':
        print("Thank you for using the ATM. Goodbye!")
        break
    else:
        print("Invalid choice. Please select 1, 2, 3, or 4.")
